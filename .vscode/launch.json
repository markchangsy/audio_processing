{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug run-offline (Trace ProcessStream)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/examples/run-offline",
            "args": ["${workspaceFolder}/0903_test/0903_lpb.wav", "${workspaceFolder}/0903_test/0903_mic.wav", "out.wav"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/examples",
            "environment": [
                {
                    "name": "WEBRTC_LOGGING",
                    "value": "1"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "logging": {
                "trace": true,
                "traceResponse": true,
                "engineLogging": true
            }
        },
        {
            "name": "Debug run-offline (Step-by-Step)",
            "type": "cppdbg", 
            "request": "launch",
            "program": "${workspaceFolder}/build/examples/run-offline",
            "args": ["${workspaceFolder}/0903_test/0903_lpb.wav", "${workspaceFolder}/0903_test/0903_mic.wav", "out.wav"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}/examples", 
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing", 
                    "ignoreFailures": true
                },
                {
                    "description": "Set condition breakpoint for ProcessStream",
                    "text": "break webrtc::AudioProcessing::ProcessStream",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}